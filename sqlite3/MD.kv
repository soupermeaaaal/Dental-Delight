#######################################
###    Default Widget Properties    ###
#######################################
<MDTextField>
    font_size: '25sp'
    #hint_font_size: '100sp'
    #helper_font_size: '100sp'
    mode: 'round'
    fill_color_normal: "white"
    fill_color_focus: "white"
    line_color_normal: app.theme_cls.primary_color
    text_color_normal: app.theme_cls.primary_color
    helper_text_color_normal: app.theme_cls.primary_color 
    hint_text_color_normal: app.theme_cls.primary_color
    hint_text_color_focus: app.theme_cls.primary_color if app.theme_cls.theme_style == "Dark" else "black"
    text_color_focus: app.theme_cls.primary_color if app.theme_cls.theme_style == "Dark" else "black"


<CustomPasswordField>
    size_hint_y: None
    height: text_field.height
    pass_text: text_field
    MDTextField:
        id: text_field
        hint_text: root.hint_text
        text: root.text
        password: True
        required: True
          

    MDIconButton:
        id: password_open_icon
        icon: "eye-off"
        pos_hint: {'x': 0,, 'y': }
        pos_hint: {"center_y": .5}
        pos: text_field.width - self.width + dp(8), 0
        theme_text_color: "Custom"
        text_color: app.theme_cls.primary_color
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            text_field.password = False if text_field.password is True else True 

<CustomPasswordRegField>
    size_hint_y: None
    height: password_field.height
    pass_text: password_field
    MDTextField:
        id: password_field
        hint_text: root.hint_text
        text: root.text
        font_size: "18sp"
        password: True
        required: True
          

    MDIconButton:
        id: password_open_icon
        icon: "eye-off"
        pos_hint: {"center_y": .5}
        pos: password_field.width - self.width + dp(8), 0
        theme_text_color: "Custom"
        text_color: app.theme_cls.primary_color
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            password_field.password = False if password_field.password is True else True 


<RegDialogContent>
    orientation: "vertical"
    spacing: "16dp"
    padding: "16dp"
    size_hint_y: None
    height: "240dp"

    MDIcon:
        icon: 'check-circle-outline'
        theme_text_color: "Custom"
        text_color: 'green'
        font_size: '80sp'
        pos_hint: {'center_x': 0.5}
    MDLabel:
        text: "Registration Successful"
        bold: True
        font_style: 'H5'
        theme_text_color: 'Custom'
        text_color: 'orange'
        halign: "center"
    MDLabel:
        text: "You can now login using your registration information"
        bold: True
        font_style: 'Subtitle2'
        theme_text_color: 'Custom'
        text_color: 'gray'
        halign: "center"
    
    
            
            
#######################################

<MainLayout>:
    screen_manager: screen_manager1
    ScreenManager:
        id: screen_manager1
        home: reg_screen
        Screen:
            id: login_screen
            name: "login_screen"

            BoxLayout:
                orientation: "vertical"
                size: root.width, root.height
                canvas.before:
                    Rectangle:
                        pos: self.pos
                        size: self.size
                        source: "bgmain2.jpg"
                    
                padding: 60
                spacing: 70
                
                FloatLayout:
                    background_normal: '' 
                    background_color: (1,1,1,0.75) 
                    canvas.before:
                        Color:
                            rgba: self.background_color
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [25,]    
                    Label:
                        text: "S I G N I N"
                        bold: True
                        font_size: '50sp'
                        underline: True
                        size_hint: None,None
                        color: (251/255, 192/255, 45/255, 1)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.85}

                    MDTextField:
                        id: log_username
                        hint_text: "Username"
                        #validator: 'email'
                        font_size: "25sp"
                        size_hint: None,None
                        size: dp(395), dp(45)  
                            
                    
                    CustomPasswordField:
                        id: log_password
                        hint_text: "Password"
                        password: True
                        font_size: "25sp"
                        size_hint: None,None
                        size: dp(395), dp(45)  
                        pos_hint: {'center_x': 0.5, 'center_y': 0.55}

                    MDFillRoundFlatButton:
                        text: '{:^55}'.format('Login')  #pad blank spaces left and right
                        font_size: "25sp"
                        size_hint: None,None
                        size: dp(395), dp(45)  
                        pos_hint: {'center_x': 0.5, 'center_y': 0.46}
                        on_release: root.login_account()
                    
                    Label:
                        text: "Forgot password?"
                        color: (249/255, 168/255, 37/255, 1)
                        font_size: '18sp'
                        size_hint: None,None
                        size: dp(255), dp(45)  
                        pos_hint: {'center_x': 0.5, 'center_y': 0.40}
                        text_size: self.size
                        valign: "top"
                        halign: "center"  

                    Label:
                        text: "Don't have an account?"
                        text_size: self.size
                        halign: "left"
                        valign: "bottom"
                        color: "#546e7a"
                        font_size: '16sp'
                        size_hint: None,None
                        size: dp(350), dp(40)  
                        pos_hint: {'x': 0.065, 'center_y': 0.06}
                    MDFillRoundFlatButton:
                        text: '{:^30}'.format('Register')  #pad blank spaces left and right
                        font_size: "18sp"
                        size_hint: None,None
                        md_bg_color: "orange"
                        size: dp(150), dp(40)  
                        pos_hint: {'center_x': 0.75, 'center_y': 0.06}
                        on_release: 
                            screen_manager1.current = "reg_screen"
                            screen_manager1.transition.direction = "left"
        
        Screen:
            id: reg_screen
            name: "reg_screen"

            BoxLayout:

                orientation: "vertical"
                size: root.width, root.height
                canvas.before:
                    Rectangle:
                        pos: self.pos
                        size: self.size
                        source: "bgmain2.jpg"
                    
                padding: "60dp"
                spacing: "20dp"
                
                FloatLayout:
                    background_normal: '' 
                    background_color: (1,1,1,0.75) 
                    canvas.before:
                        Color:
                            rgba: self.background_color
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [25,]    
                    Label:
                        text: "Registration"
                        bold: True
                        font_size: "50sp"
                        underline: True
                        color: (251/255, 192/255, 45/255, 1)
                        size_hint: None,None
                        pos_hint: {'x': 0.2, 'center_y': 0.85}

                    MDTextField:
                        id: username
                        hint_text: "Username"
                        required: True
                        helper_text_mode: "on_error"
                        helper_text: "Enter a valid username" 
                        size_hint: None,None
                        font_size: "18sp"
                        size: dp(500), dp(45)  
                        pos_hint: {'center_x': 0.5, 'center_y': 0.75}
                        
                    
                    MDTextField:
                        id: firstname
                        hint_text: "First Name"
                        required: True
                        helper_text_mode: "on_error"
                        helper_text: "Enter first name" 
                        size_hint: None,None
                        font_size: "18sp"
                        size: dp(500), dp(45)  
                        pos_hint: {'center_x': 0.5, 'center_y': 0.67}

                    MDTextField:
                        id: lastname
                        hint_text: "Last Name"
                        required: True
                        helper_text_mode: "on_error"
                        helper_text: "Enter last name" 
                        size_hint: None,None
                        font_size: "18sp"
                        size: dp(500), dp(45)  
                        pos_hint: {'center_x': 0.5, 'center_y': 0.59}
                    
                    MDTextField:
                        id: email
                        hint_text: "Email"
                        validator: 'email'
                        required: True
                        helper_text_mode: "on_error"
                        helper_text: "Enter valid email" 
                        font_size: "18sp"
                        size_hint: None,None
                        size: dp(500), dp(45)  
                        pos_hint: {'center_x': 0.5, 'center_y': 0.51}

                    CustomPasswordRegField:
                        id: password
                        text: ""
                        hint_text: "Password"
                        password: True
                        required: True
                        helper_text_mode: "on_error"
                        helper_text: "Enter a password" 
                        size_hint: None,None
                        font_size: "18sp"
                        size: dp(500), dp(45)  
                        pos_hint: {'center_x': 0.5, 'center_y': 0.43}
                    
                    MDCheckbox:
                        id: checkBox
                        size_hint: None, None
                        size: "48dp", "48dp"
                        pos_hint: {'right': .28, 'center_y': .38}
                        on_state: reg_button.disabled = False if checkBox.active == True else True
                    
                    
                    MDLabel:
                        text: "Agree with Terms and Conditions"
                        font_size: "16sp"
                        theme_text_color: "Custom"
                        size_hint: None, None
                        size: dp(600), dp(45)
                        text_color: "orange"
                        pos_hint: {'x': .30, 'center_y': .38}
                    
                    MDFillRoundFlatButton:
                        id: reg_button
                        text: '{:^46}'.format('Signup')  #pad blank spaces left and right
                        font_size: "25sp"
                        size_hint: None,None
                        md_bg_color: "orange"
                        size: dp(395), dp(45)  
                        disabled: True
                        pos_hint: {'center_x': 0.5, 'center_y': 0.15}
                        on_release: root.register_account(app)

                    MDFlatButton:
                        text: "[color=#FF9800]I'm already a member[/color]" 
                        font_size: "16sp"
                        size_hint: None,None
                        size: dp(395), dp(45)  
                        pos_hint: {'center_x': 0.5, 'center_y': 0.08}
                        on_release: 
                            screen_manager1.current = "login_screen"
                            screen_manager1.transition.direction = "right"
                        
        Screen:
            id:dashboard_screen
            name: 'dashboard_screen'
            MDBoxLayout:
                orientation: "vertical"
                size: root.size
                MDTopAppBar:
                    title: "Navigation Bar"
                    left_action_items: [["menu"]]
                    right_action_items: [["dots-vertical"],["theme-light-dark"]]
                MDFloatLayout:
                
                MDBottomNavigation:
                    panel_color: app.theme_cls.primary_color
                    selected_color_background: None
                    text_color_active: app.theme_cls.primary_dark
                    text_color_normal: 1,1,1,1
                    use_text: False
                    transition_duration: 0.9 #animate a fade in screen switch

                    MDBottomNavigationItem:
                        name: 'screen 1'
                        icon: 'home-outline'
                        #badge_icon: "numeric-10"
                        
                        MDLabel:
                            text: 'Welcome to KivyMD- SECTION 1'
                            halign: 'center'
                            font_size: '55sp'
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color

                    MDBottomNavigationItem:
                        name: 'screen 2'
                        icon: 'magnify'
                        #badge_icon: "numeric-10"
                        
                        MDLabel:
                            text: 'Welcome to KivyMD- SECTION 2'
                            halign: 'center'
                            font_size: '55sp'
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color

                    MDBottomNavigationItem:
                        name: 'screen 3'
                        icon: 'plus'
                        #badge_icon: "numeric-10"
                        
                        MDLabel:
                            text: 'Welcome to KivyMD- SECTION 3'
                            halign: 'center'
                            font_size: '55sp'
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color

                    MDBottomNavigationItem:
                        name: 'screen 4'
                        icon: 'message-processing-outline'
                        #badge_icon: "numeric-10"
                        
                        MDLabel:
                            text: 'Welcome to KivyMD- SECTION 4'
                            halign: 'center'
                            font_size: '55sp'
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color

                    MDBottomNavigationItem:
                        name: 'screen 5'
                        icon: 'bell-outline'
                        #badge_icon: "numeric-10"
                        
                        MDLabel:
                            text: 'Welcome to KivyMD- SECTION 5'
                            halign: 'center'
                            font_size: '55sp'
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color


    
    