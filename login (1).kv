<MainLayout>:    
    MDBoxLayout:
        orientation: 'vertical'
        padding: "130dp"
        spacing: "20dp"
        MDLabel:
            text: "Login Screen"
            halign: "center"
        MDTextField:
            hint_text: "username"
        MDTextField:
            hint_text: "password"
            password: True
        MDRoundFlatButton:
            text:"Sign In"
            size_hint: 0.4, 0.1
            pos_hint: {"center_x": 0.5}
        MDRoundFlatButton:
            text:"Register Here"
            size_hint: 0.4, 0.1
            pos_hint: {"center_x": 0.5}
        